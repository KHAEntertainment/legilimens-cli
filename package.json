{
  "name": "legilimens-cli",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm exec eslint .",
    "test": "pnpm -r run test",
    "test:integration": "vitest run --config vitest.config.ts",
    "start:cli": "pnpm --filter @legilimens/cli start",
    "start:harness": "pnpm --filter @legilimens/harness-service dev",
    "audit:references": "node scripts/audit/references.mjs",
    "audit:links": "markdown-link-check -q **/*.md -c .mlc.config.json",
    "audit:duplicates": "node scripts/audit/duplicates.mjs",
    "audit:scripts": "node scripts/audit/unreferenced-scripts.mjs",
    "audit:assets": "node scripts/audit/assets-usage.mjs",
    "audit:binaries": "node scripts/audit/binaries.mjs",
    "audit:all": "pnpm run audit:references && pnpm run audit:links && pnpm run audit:duplicates && pnpm run audit:scripts && pnpm run audit:assets && pnpm run audit:binaries"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/decompress": "^4.2.7",
    "@types/node": "^20.12.7",
    "eslint": "^8.57.0",
    "markdown-link-check": "^3.14.1",
    "tsx": "^4.7.0",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.6.0",
    "vitest": "^1.5.0"
  },
  "pnpm": {
    "packageImportMethod": "auto"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "decompress": "^4.2.1"
  }
}