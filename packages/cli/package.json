{
  "name": "@legilimens/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "legilimens": "dist/bin/legilimens.js"
  },
  "scripts": {
    "start": "tsx bin/legilimens.ts",
    "dev": "tsx watch bin/legilimens.ts",
    "build": "tsc -p tsconfig.json",
    "build-assets": "node scripts/build-assets.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@legilimens/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.6.0",
    "gradient-string": "^2.0.2",
    "ink": "^4.4.1",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^5.0.1",
    "ora": "^6.3.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.21",
    "tsx": "^4.7.0",
    "typescript": "^5.4.2",
    "vitest": "^1.5.0"
  }
}
