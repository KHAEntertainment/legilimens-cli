{
  "name": "@legilimens/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "legilimens": "dist/bin/legilimens.js"
  },
  "scripts": {
    "start": "bash scripts/run-cli.sh",
    "dev": "bash scripts/run-cli.sh",
    "build": "tsc -p tsconfig.json && node scripts/build-assets.mjs",
    "build-assets": "node scripts/build-assets.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@legilimens/core": "workspace:*",
    "@clack/prompts": "^0.7.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.6.0",
    "gradient-string": "^2.0.2",
    "keytar": "^7.9.0",
    "ora": "^6.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsx": "^4.7.0",
    "typescript": "^5.4.2",
    "vitest": "^1.5.0"
  }
}
